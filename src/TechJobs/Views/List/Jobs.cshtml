<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>
@*TODO #3 - Use the same list display from Views/Search/Index.cshtml*@
<table>
    @for(int i=0;i<ViewBag.jobs.Count;i++)
    {
        @if (i == 0)
        {
            <tr>
                @foreach(string item in ViewBag.header)
                {
                    <th>@item;</th>

                }
            </tr>
        }
        <tr>
            @foreach (KeyValuePair<string, string> job in ViewBag.jobs[i])
            {
                <td>@job.Value</td>;

            }
        </tr>

    }
</table>